<% if loged_in? %>
  <div class="home-top">
      <div class="home-top-right">
        <div class="top-right">
          <%= render 'shared/user_info' %>
        </div>
      </div>
      <div class="home-top-left">
        <h1 class="micropost">What's on your mind?</h1>
        <%= render 'shared/micropost_form' %>
      </div>
  </div>
  <div class="home-bottom">
    <%= render 'shared/feed' %>
  </div>
<% else %>
  <h1>Welcome to Bejben</h1>
  <p>Connect with your friends, and other people.</p>

   <%= link_to "Register now!", register_path, :class => "register_button round" %>
<% end %>
