  <div class="post">
    <div class="post-content">
      <div class="post-block">
        <div class="post-block-up">
        </div>
        <div class="post-block-down">
          <%= link_to gravatar_for(feed_item.user, size: 55), feed_item.user, class: "block-down-img" %>
        </div>
      </div>
      <strong class="info-user-link">
        <%= link_to feed_item.user.name, feed_item.user %>
      </strong>
      <small class="info-post-time">
        - <%= post_time(feed_item.created_at) %>
      </small>
      <span class="content-delete">
        <% if current_user?(feed_item.user) %>
           <%= link_to "Delete", feed_item, method: :delete,
           data: { confirm: "You sure?" }, title: "Delete" %>
        <% end %>
      </span>
      <p class="content-text">
        <%= feed_item.content %>
      </p> 
    </div>   
  </div>
