<div class="user_info">
  <span class="user-link">
    <%= link_to gravatar_for(current_user, size: 110), current_user %></br> 
    <%= link_to current_user.name, current_user,id: "user-name-link" %>
  </span></br>
  <span>
    <%= link_to "Edit Profile", edit_user_path(current_user) %>
  </span></br>
  <span>
    <%= pluralize(current_user.microposts.count, "posts") %>
  </span>
</div>
   
